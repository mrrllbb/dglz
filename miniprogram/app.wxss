/**app.wxss**/
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0;
  padding-top: env(safe-area-inset-top, 40rpx);
  padding-bottom: env(safe-area-inset-bottom, 40rpx);
  box-sizing: border-box;
  width: 100%;
}

page {
  background: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

.btn {
  padding: 20rpx 40rpx;
  margin: 10rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
}

.btn-primary {
  background: #007bff;
  color: white;
}

.btn-primary:active {
  background: #0056b3;
  transform: scale(0.95);
}

.btn-secondary {
  background: #6c757d;
  color: white;
}

.btn-secondary:active {
  background: #5a6268;
  transform: scale(0.95);
}

.btn-danger {
  background: #dc3545;
  color: white;
}

.btn-danger:active {
  background: #bd2130;
  transform: scale(0.95);
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.text-center {
  text-align: center;
}

.text-muted {
  color: #6c757d;
}

.mt-3 {
  margin-top: 30rpx;
}

.mb-3 {
  margin-bottom: 30rpx;
}

.card {
  background: white;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx;
  margin: 20rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.list-item {
  padding: 15rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
}

.list-item:last-child {
  border-bottom: none;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .container {
    padding: 30rpx 0;
  }

  .card {
    margin: 10rpx;
  }
}
