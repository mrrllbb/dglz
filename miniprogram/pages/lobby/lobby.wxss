/**pages/lobby/lobby.wxss**/
.container {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.lobby-header {
  text-align: center;
  color: white;
  padding: 30rpx 0;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.2);
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.lobby-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.players-section,
.spectators-section {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-info {
  font-size: 24rpx;
  color: #ff6b6b;
  background: #ffe0e0;
  padding: 8rpx 12rpx;
  border-radius: 6rpx;
}

.players-list {
  max-height: 300rpx;
  overflow-y: auto;
}

.player-item {
  padding: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 28rpx;
  color: #555;
  display: flex;
  align-items: center;
  min-height: 40rpx;
}

.player-item:last-child {
  border-bottom: none;
}

.spectators-section {
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tips {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 8rpx;
  padding: 15rpx 20rpx;
  margin: 10rpx 0;
  border-left: 4rpx solid #4facfe;
}

.tip-text {
  display: block;
  font-size: 24rpx;
  color: white;
  line-height: 1.5;
}

.tip-text.error {
  color: #ff6b6b;
  border-left-color: #ff6b6b;
}

.tip-text.success {
  color: #51cf66;
  border-left-color: #51cf66;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-top: auto;
  padding-top: 20rpx;
}

.btn {
  width: 100%;
  padding: 25rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
  border: none;
  color: white;
  font-weight: bold;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.2);
}

.btn:active:not(:disabled) {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.btn-primary {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.btn-secondary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

@media (max-width: 768px) {
  .players-list {
    max-height: 250rpx;
  }

  .action-buttons {
    gap: 8rpx;
  }
}
