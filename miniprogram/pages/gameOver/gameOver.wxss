/**pages/gameOver/gameOver.wxss**/
.container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

.game-over-content {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
  max-width: 600rpx;
  width: 100%;
}

.trophy {
  font-size: 120rpx;
  animation: bounce 0.6s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

.winner-message {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.final-status {
  width: 100%;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
}

.status-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  text-align: center;
}

.final-players {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.final-player-item {
  display: flex;
  align-items: center;
  background: white;
  padding: 15rpx 20rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid #667eea;
}

.rank-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
  min-width: 40rpx;
  text-align: right;
  margin-right: 15rpx;
}

.rank-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.rank-team {
  font-size: 20rpx;
  color: #999;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  width: 100%;
  margin-top: 20rpx;
}

.btn {
  width: 100%;
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 10rpx;
  border: none;
  color: white;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.btn-primary {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.btn-secondary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

@media (max-width: 600px) {
  .game-over-content {
    padding: 30rpx 20rpx;
    gap: 20rpx;
  }

  .winner-message {
    font-size: 40rpx;
  }

  .trophy {
    font-size: 100rpx;
  }

  .final-player-item {
    padding: 12rpx 15rpx;
  }
}
